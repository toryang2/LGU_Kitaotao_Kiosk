<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".services.accounting.accounting_service_2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:stretchColumns="1,2,3,4,5">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="150dp">

                        <TextView
                            android:id="@+id/titleTextService3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Request for Issuance of Withholding Tax Certificate (BIR Form 2307)"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/titleService1Description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="This service issues BIR Form 2307 to clients for BIR taxes withheld from government payments. BIR Form 2307 shows the recipients of any income subject to expanded withholding tax." />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:weightSum="5">

                        <TextView
                            android:id="@+id/tableHeader1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@drawable/cell_shape_headers"
                            android:gravity="center|left"
                            android:padding="2sp"
                            android:text="Office or Division:"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:layout_width="0dp" />

                        <TextView
                            android:id="@+id/tableHeaderDesc1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@drawable/cell_shape_normal"
                            android:gravity="center|left"
                            android:padding="2sp"
                            android:text="Municipal Accounting Office (MACCO)"
                            android:textColor="#49454F"
                            tools:layout_width="0dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="5">

                        <TextView
                            android:id="@+id/tableHeader2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@drawable/cell_shape_headers"
                            android:gravity="center|left"
                            android:padding="2sp"
                            android:text="Classification:"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:layout_width="0dp" />

                        <TextView
                            android:id="@+id/tableHeaderDesc2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@drawable/cell_shape_normal"
                            android:gravity="center|left"
                            android:padding="2sp"
                            android:text="Simple"
                            android:textColor="#49454F"
                            tools:layout_width="0dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="5">

                        <TextView
                            android:id="@+id/tableHeader3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@drawable/cell_shape_headers"
                            android:gravity="center|left"
                            android:padding="2sp"
                            android:text="Type of Transaction:"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:layout_width="0dp" />

                        <TextView
                            android:id="@+id/tableHeaderDesc3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@drawable/cell_shape_normal"
                            android:gravity="center|left"
                            android:padding="2sp"
                            android:text="G2B – Government to Business \nG2G – Government to Government"
                            android:textColor="#49454F"
                            tools:layout_width="0dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="5">

                        <TextView
                            android:id="@+id/tableHeader4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@drawable/cell_shape_headers"
                            android:gravity="center|left"
                            android:padding="2sp"
                            android:text="Who may avail:"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:layout_width="0dp" />

                        <TextView
                            android:id="@+id/tableHeaderDesc4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@drawable/cell_shape_normal"
                            android:gravity="center|left"
                            android:padding="2sp"
                            android:text="Suppliers and Contractors of the LGU – Kitaotao with Withholding Tax Deduction"
                            android:textColor="#49454F"
                            tools:layout_width="0dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="5">

                        <TextView
                            android:id="@+id/tableHeader5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:background="@drawable/cell_shape_headers"
                            android:gravity="center"
                            android:padding="5sp"
                            android:text="CHECKLIST OF REQUIREMENTS"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:layout_width="0dp" />

                        <TextView
                            android:id="@+id/tableHeader6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:background="@drawable/cell_shape_headers"
                            android:gravity="center"
                            android:padding="5sp"
                            android:text="WHERE TO SECURE"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:layout_width="0dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="5">

                        <TextView
                            android:id="@+id/tableHeaderDesc5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:background="@drawable/cell_shape_normal"
                            android:gravity="top|left"
                            android:padding="5sp"
                            android:text="1. Request Slip \n2. Approved Disbursement Voucher with photocopy of issued check"
                            android:textColor="#49454F"
                            tools:layout_width="0dp" />

                        <TextView
                            android:id="@+id/tableHeaderDesc6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:background="@drawable/cell_shape_normal"
                            android:gravity="top|left"
                            android:padding="5sp"
                            android:text="1. Municipal Accounting Office \n2. Client"
                            android:textColor="#49454F"
                            tools:layout_width="0dp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:text="text1"
                            android:padding="2sp"
                            android:layout_column="1"/>
                        <TextView
                            android:text="text2"
                            android:padding="2sp"
                            android:layout_column="2"/>
                        <TextView
                            android:text="text2"
                            android:padding="2sp"
                            android:layout_column="3"/>
                    </TableRow>

                </TableLayout>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/header" />
</androidx.constraintlayout.widget.ConstraintLayout>