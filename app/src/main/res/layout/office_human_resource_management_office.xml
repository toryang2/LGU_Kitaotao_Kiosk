<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".office.HumanResourceManagementOffice">

  <!-- FrameLayout positioned at the top -->
  <FrameLayout
      android:id="@+id/rootLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  <!-- Nested ConstraintLayout below rootLayout -->
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@id/rootLayout"
      app:layout_constraintBottom_toBottomOf="parent">

    <ScrollView
        android:id="@+id/scrollableLeft"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scrollbarThumbHorizontal="@android:color/transparent"
        android:scrollbarThumbVertical="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/nonScrollableRight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:orientation="vertical">

        <TextView
            android:id="@+id/office_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/titleHRMO"
            android:textAlignment="center"
            android:textColor="#49454F"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="LIST OF SERVICES"
            android:textColor="#49454F"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/internal_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="External Services"
            android:textColor="#49454F"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/int_service_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="Application for Leave"
            android:textColor="#49454F" />

        <TextView
            android:id="@+id/int_service_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="Payroll Services for Municipal Officials, Permanent and Casual Employees"
            android:textColor="#49454F" />

        <TextView
            android:id="@+id/int_service_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="Payroll Services for Job Order using ATM"
            android:textColor="#49454F" />

        <TextView
            android:id="@+id/int_service_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="Payroll Services for Job Order for disbursement"
            android:textColor="#49454F" />

        <TextView
            android:id="@+id/internal.external_services"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="Internal/ External Services"
            android:textColor="#49454F"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inEx_service_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="Issuance of Certificate of Employment, Compensation and Benefits and Earned Leave Credits"
            android:textColor="#49454F" />

        <TextView
            android:id="@+id/inEx_service_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:paddingBottom="150dp"
            android:text="Issuance for Service Record"
            android:textColor="#49454F" />

      </LinearLayout>
    </ScrollView>

    <!-- Right side: Non-scrollable content -->
    <LinearLayout
        android:id="@+id/nonScrollableRight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/scrollableLeft"
        app:layout_constraintTop_toTopOf="parent">

      <TextView
          android:id="@+id/floorID"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:gravity="center"/>

      <!-- Non-scrollable content here -->
      <VideoView
          android:id="@+id/videoView"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginLeft="20dp"
          android:layout_marginBottom="20dp"
          android:layout_weight="1"/>

    </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>