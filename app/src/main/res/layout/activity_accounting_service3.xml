<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".services.accounting.accounting_service_3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:weightSum="4">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/titleTextService1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/cell_shape_headers"
                        android:gravity="center|left"
                        android:padding="2sp"
                        android:text="Office or Division:"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/titleTextService2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/cell_shape_normal"
                        android:gravity="center|left"
                        android:padding="2sp"
                        android:text="Municipal Accounting Office (MACCO)"
                        android:textColor="#49454F" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/titleTextService3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/cell_shape_headers"
                        android:gravity="center|left"
                        android:padding="2sp"
                        android:text="Classification:"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/titleTextService4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/cell_shape_normal"
                        android:gravity="center|left"
                        android:padding="2sp"
                        android:text="Simple"
                        android:textColor="#49454F" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/titleTextService5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/cell_shape_headers"
                        android:gravity="center|left"
                        android:padding="2sp"
                        android:text="Type of Transaction:"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/titleTextService6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/cell_shape_normal"
                        android:gravity="center|left"
                        android:padding="2sp"
                        android:text="G2B - Government to Business \nG2G - Government to Government"
                        android:textColor="#49454F" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/titleTextService7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/cell_shape_headers"
                        android:gravity="center|left"
                        android:padding="2sp"
                        android:text="Who may avail:"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/titleTextService8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/cell_shape_normal"
                        android:gravity="center|left"
                        android:padding="2sp"
                        android:text="Suppliers and Contractors of the LGU - Kitaotao with Withholding Tax Deduction"
                        android:textColor="#49454F" />
                </TableRow>

            </TableLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/header" />
</androidx.constraintlayout.widget.ConstraintLayout>